<h1>create todo</h1>

<% if @todo.errors.any? %>
 <h2>there are errors due to </h2>
 <ul>
    <% @todo.errors.full_messages.each do |msg| %>
     <li> <%= msg %>   </li>
    <%end%>

 </ul>
<%end%>




<%=form_for @todo do |f| %>
    <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
    </p>

    <p>
    <%= f.label:description%>
    <%= f.text_field :description%>
    </p>

    <%= f.submit %>




<%end%>